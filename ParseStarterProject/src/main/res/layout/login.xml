<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:textColor="@android:color/white"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"/>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/numberlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="8dp">
        <EditText

            android:inputType="number"
            android:id="@+id/input_number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Personal Mobile Number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp">
        <EditText
            android:id="@+id/input_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password" />
    </android.support.design.widget.TextInputLayout>

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <Button
        android:id="@+id/button"
        android:textColor="#FFF"
        android:text="LOGIN"
        android:background="@drawable/selector_button"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="60dp"
        />

    <TextView
        android:layout_gravity="center"
        android:text="No Account Yet ?"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/create"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="@string/createone"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="20sp"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>